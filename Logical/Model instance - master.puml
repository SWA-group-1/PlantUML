entity AttackTower
entity SupportTower
entity Enemy
entity Player

SupportFunction --* SupportTower
Price --* AttackTower
Price --* SupportTower
BoardPosition --* AttackTower
BoardPosition --* SupportTower
PathPosition --* Enemy
EnemyHealth --* Enemy
Sprite --* Enemy
